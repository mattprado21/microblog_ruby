<main style="padding:30px">
    <div class="main-section">
        <div class="container">
            <div class="main-section-data">
                <div class="row">
                    <div class="col-lg-3 col-md-4 pd-left-none no-pd">
                    </div>
                    <div class="col-lg-6 col-md-8 no-pd">
                        <div class="main-ws-sec">
                            <div class="posts-section">
                                <div class="post-project">
                                    <h3><%= t('label.share_post') %></h3>
                                    <br>
                                    <div class="post-project-fields">
                                        <%= form_with(url: repost_post_path(@post.id), method: :post) do |form| %>
                                            <div class="row">
                                                <div class="col-lg-12">
                                                    <%=
                                                        form.text_area :content,
                                                        class: "form-control",
                                                        placeholder: t('input.say_something_about'),
                                                        maxlength: 140,
                                                        rows: 2,
                                                        cols: 100,
                                                        required: false,
                                                        style: "border: none;height:auto;"
                                                    %>
                                                    <div class="post-bar no-margin" style="padding:5px;border:#dfdfdf 1px solid;">
                                                        <div style="margin:10px;">
                                                            <div class="usy-dt">
                                                                <% if @post.user.profile_image.attached? %>
                                                                    <%= image_tag(@post.user.profile_image, width:"50", height:"50") %>
                                                                <% else %>
                                                                    <%= image_tag("default_profile.jpg", width:"50", height:"50") %>
                                                                <% end %>
                                                                <div class="usy-name">
                                                                    <h3><%= @post.user.email %></h3>
                                                                    <span>
                                                                        <%= image_tag("clock.png", :alt => "Clock") %>
                                                                        <%= time_ago_in_words(@post.created_at) %>
                                                                    </span>
                                                                </div>
                                                            </div>
                                                            <%= link_to root_path do %>
                                                                <div class="post_content" style="border-bottom:0px;padding:0px;">
                                                                    <p style="padding:5px 0px 5px 0px;">
                                                                        <%= @post.content %>
                                                                    </p>
                                                                    <% if @post.image.attached? %>
                                                                        <%= image_tag(@post.image) %>
                                                                    <% end %>
                                                                </div>
                                                            <% end %>
                                                        </div>
                                                    </div><!--post-bar end-->
                                                </div>
                                                <div class="col-lg-12">
                                                    <ul>
                                                        <li><%= form.submit t('label.share'), class:"btn btn-primary", style: "margin-bottom:0px;" %></li>
                                                        <li><%= link_to t('label.back'), :back %></li>
                                                        
                                                    </ul>
                                                </div>
                                            </div>
                                        <% end %>
                                    </div><!--post-project-fields end-->
                                </div><!--post-project end-->
                            </div><!--posts-section end-->
                        </div><!--main-ws-sec end-->
                    </div>
                    <div class="col-lg-3 pd-right-none no-pd">
                        <div class="right-sidebar">
                        </div><!--right-sidebar end-->
                    </div>
                </div>
            </div><!-- main-section-data end-->
        </div> 
    </div>
</main>
