<main style="padding:30px">
    <div class="main-section">
        <div class="container">
            <div class="main-section-data">
                <div class="row">
                    <div class="col-lg-3 col-md-4 pd-left-none no-pd">
                    </div>
                    <div class="col-lg-6 col-md-8 no-pd">
                        <div class="main-ws-sec">
                            <div class="posts-section">
                                <div class="post-project">
                                    <h3><%= t('label.edit_post') %></h3>
                                    <br>
                                    <div class="post-project-fields">
                                        <%= form_with model: @post do |form| %>
                                            <div class="row">
                                                <% if @post.errors.any? %>
                                                    <small class="form-text text-danger">
                                                        <%= @post.errors.where(:content).first.full_message %>
                                                    </small><br>
                                                <% end %>
                                                <%= render 'layouts/forms/post', form: form %>
                                                <% if @post.share %>
                                                    <div class="col-lg-12" style="border-radius:5px;">
                                                        <div class="post-bar no-margin" style="margin:10px;padding:5px;border:#dfdfdf 1px solid;">
                                                            <div style="margin:10px;">
                                                                <div class="usy-dt">
                                                                    <% if @post.share.user.profile_image.attached? %>
                                                                        <%= image_tag(@post.share.user.profile_image, width:"50", height:"50") %>
                                                                    <% else %>
                                                                        <%= image_tag("default_profile.jpg", width:"50", height:"50") %>
                                                                    <% end %>
                                                                    <div class="usy-name">
                                                                        <h3><%= @post.share.user.first_name + " " + @post.share.user.last_name %></h3>
                                                                        <span>
                                                                            <%= image_tag("clock.png", :alt => "Clock") %>
                                                                            <%= time_ago_in_words(@post.share.created_at) %>
                                                                        </span>
                                                                    </div>
                                                                </div>
                                                                <%= link_to root_path do %>
                                                                    <div class="post_content" style="border-bottom:0px;padding:0px;">
                                                                        <p style="padding:5px 0px 5px 0px;">
                                                                            <%= @post.share.content %>
                                                                        </p>
                                                                        <% if @post.share.image.attached? %>
                                                                            <%= image_tag(@post.share.image) %>
                                                                        <% end %>
                                                                    </div>
                                                                <% end %>
                                                            </div>
                                                        </div><!--post-bar end-->
                                                    </div>
                                                <% end %>
                                                <div class="col-lg-12">
                                                    <ul>
                                                        <li><%= form.submit t('label.update_post'), class:"btn btn-primary", style: "margin-bottom:0px;" %></li>
                                                        <li><%= link_to t('label.back'), :back %></li>
                                                        
                                                    </ul>
                                                </div>
                                            </div>
                                        <% end %>
                                    </div><!--post-project-fields end-->
                                </div><!--post-project end-->
                            </div><!--posts-section end-->
                        </div><!--main-ws-sec end-->
                    </div>
                    <div class="col-lg-3 pd-right-none no-pd">
                        <div class="right-sidebar">
                        </div><!--right-sidebar end-->
                    </div>
                </div>
            </div><!-- main-section-data end-->
        </div> 
    </div>
</main>
