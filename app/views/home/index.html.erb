<div class="wrapper">
    <main style="padding:30px">
        <div class="main-section">
            <div class="container">
                <div class="main-section-data">
                    <div class="row">
                        <div class="col-lg-3 col-md-4 pd-left-none no-pd">
                            <div class="main-left-sidebar no-margin">
                                <div class="user-data full-width">
                                    <div class="user-profile">
                                        <div class="username-dt">
                                            <div class="usr-pic">
                                                <% if current_user.profile_image.attached? %>
                                                    <%= image_tag(current_user.profile_image, width:"100", height:"110") %>
                                                <% else %>
                                                    <%= image_tag("default_profile.jpg", width:"100", height:"110") %>
                                                <% end %>
                                            </div>
                                        </div><!--username-dt end-->
                                        <div class="user-specs">
                                            <h6><%= current_user.first_name + " " + current_user.last_name %></h6>
                                            <span><%= current_user.bio %> </span>
                                        </div>
                                    </div><!--user-profile end-->
                                    <ul class="user-fw-status">
                                        <li>
                                            <h4><%= t('label.following') %></h4>
                                            <span>34</span>
                                        </li>
                                        <li>
                                            <h4><%= t('label.followers') %></h4>
                                            <span>155</span>
                                        </li>
                                        <li>
                                            <a href="#" title=""><%= t('label.view_profile') %></a>
                                        </li>
                                    </ul>
                                </div><!--user-data end-->
                            </div><!--main-left-sidebar end-->
                        </div>
                        <div class="col-lg-6 col-md-8 no-pd">
                            <div class="main-ws-sec">
                            <div class="post-topbar">
                                        <div class="user-picy">
											<% if current_user.profile_image.attached? %>
                                                <%= image_tag(current_user.profile_image, width:"50", height:"50") %>
                                            <% else %>
                                                <%= image_tag("default_profile.jpg", width:"50", height:"50") %>
                                            <% end %>
										</div>
                                        <div class="post-st">
											<ul>
												<li>
                                                <button class="btn btn-primary float-right" id="createPostBtn"> <%= t('label.create_post') %> </button>
                                                </li>
											</ul>
										</div><!--post-st end-->
                                    </div><!--post-topbar end-->
                                <div class="posts-section">
                                    <% @posts.each do |post| %>
                                        <div class="post-bar">
                                            <div class="post-bar no-margin">
                                                <div class="post_topbar">
                                                    <div class="usy-dt">
                                                        <% if post.user.profile_image.attached? %>
                                                            <%= image_tag(post.user.profile_image, width:"50", height:"50") %>
                                                        <% else %>
                                                            <%= image_tag("default_profile.jpg", width:"50", height:"50") %>
                                                        <% end %>
                                                        <div class="usy-name">
                                                            <h3><%= post.user.first_name + " " + post.user.last_name %></h3>
                                                            <span>
                                                                <%= image_tag("clock.png", :alt => "Clock") %>
                                                                <%= time_ago_in_words(post.created_at) %>
                                                            </span>
                                                        </div>
                                                    </div>
                                                    <div class="ed-opts">
                                                        <%= link_to '<i class="fa fa-edit"></i>'.html_safe, edit_post_path(post.id) %>
                                                        <%= link_to '<i class="fa fa-trash"></i>'.html_safe, post, method: :delete, data: { confirm: 'Are you sure you want to delete?' } %>
                                                    </div>
                                                </div>
                                                <%= link_to post_path(post.id) do %>
                                                    <div class="post_content">
                                                        <p>
                                                            <%= post.content %>
                                                            <% if post.image.attached? %>
                                                                <%= image_tag(post.image) %>
                                                            <% end %>
                                                            <!-- <a href="#" title="">view more</a> -->
                                                        </p>
                                                    </div>
                                                <% end %>
                                                <div class="job-status-bar">
                                                    <ul class="like-com">
                                                        <%
                                                            pre_like = post.likes.find { |like| like.user_id == current_user.id}
                                                            post_like = "<i class='fa fa-heart'></i>
                                                                #{(post.likes.count != 0 ? post.likes.count : '')}
                                                                #{((post.likes.count) > 1 ? t('label.likes') : t('label.like'))}"
                                                        %>
                                                        <li>
                                                            <% if pre_like %>
                                                                <%= 
                                                                    link_to post_like.html_safe,
                                                                    post_like_path(post, pre_like),
                                                                    method: :delete,
                                                                    class: 'active'
                                                                %>
                                                            <% else %>
                                                                <%= 
                                                                    link_to post_like.html_safe,
                                                                    post_likes_path(post),
                                                                    method: :post
                                                                %>
                                                            <% end %>
                                                        </li>
                                                        <li>
                                                            <a href="#">
                                                                <i class="fa fa-comment"></i>
                                                                <%= t('label.comment') %>
                                                            </a>
                                                        </li>
                                                    </ul>
                                                </div>
                                            </div><!--post-bar end-->
                                            <div class="comment-section">
                                                <div class="comment-sec">
                                                    <ul>
                                                        <% post.comments.each do |comment| %>
                                                            <li>
                                                                <div class="comment-list">
                                                                    <div class="bg-img">
                                                                        <img src="http://via.placeholder.com/40x40" alt="">
                                                                    </div>
                                                                    <div class="comment">
                                                                        <h3>
                                                                            <%= comment.user.email %>
                                                                            <div class="ed-opts">
                                                                                <i id="<%= comment.id %>" data-post_id="<%= comment.post_id %>" data-comment="<%= comment.comment %>" class="fa fa-edit edit-comment"></i>
                                                                                <%= link_to '<i class="fa fa-trash"></i>'.html_safe, post_comment_path(comment.post_id, comment.id), method: :delete, data: { confirm: 'Are you sure you want to delete?' } %>
                                                                            </div>
                                                                        </h3>
                                                                        <span>
                                                                            <img src="images/clock.png" alt="">
                                                                            <%= time_ago_in_words(comment.created_at) %> ago.
                                                                        </span>
                                                                        <p>
                                                                            <%= comment.comment %>
                                                                        </p>
                                                                    </div>
                                                                </div><!--comment-list end-->
                                                            </li>
                                                        <% end %>
                                                    </ul>
                                                </div><!--comment-sec end-->
                                                <div class="post-comment">
                                                    <div class="cm_img">
                                                        <% if current_user.profile_image.attached? %>
                                                            <%= image_tag(current_user.profile_image, width:"40", height:"40") %>
                                                        <% else %>
                                                            <%= image_tag("default_profile.jpg", width:"40", height:"40") %>
                                                        <% end %>
                                                    </div>
                                                    <div class="comment_box">
                                                        <%= form_with(url: post_comments_path(post)) do |f| %>
                                                            <%= f.text_field :comment, placeholder: t('label.add_comment') %>
                                                            <%= f.submit t('label.send'), class: "send_button" %>
                                                        <% end %>
                                                    </div>
                                                </div><!--post-comment end-->
                                            </div><!--comment-section end-->
                                        </div>
                                    <% end %>
                                </div><!--posts-section end-->
                            </div><!--main-ws-sec end-->
                        </div>
                        <div class="col-lg-3 pd-right-none no-pd">
                            <div class="right-sidebar">
                            </div><!--right-sidebar end-->
                        </div>
                    </div>
                </div><!-- main-section-data end-->
            </div> 
        </div>
    </main>
</div><!--theme-layout end-->

<%= render 'layouts/forms/edit_comment_modal' %>
<%= render 'layouts/forms/add_post_modal' %>